<div class="page-header">
  <h1><%= @handle %>'s Timeline</h1>
</div>

<ul class="list-group col-md-8 col-md-offset-2">
  <% @tweets.each do |tweet| %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-10">
          <%= tweet.text %>
        </div>
        <div class="col-md-2">
          <span class="badge pull-right"><%= tweet.created_at %></span>
        </div>
      </div>
    </li>
  <% end %>
</ul>
